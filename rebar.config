{erl_opts, [
            debug_info,
            %% report, warn_export_vars, warn_missing_spec, warn_unused_import,
            {parse_transform, lager_transform}
]}.

{port_env, [
            {"linux", "CC", "g++"},
            {"linux", "CXX", "g++"},
            {"linux", "CXXFLAGS", "$CXXFLAGS -std=c++11 -O2"}
]}.

{port_specs, [{"linux", "priv/vnn_distribution.so", ["c_src/*.cpp"]}]}.

{deps, [
        {lager, "2.0.0", {git, "https://github.com/basho/lager.git", {tag, "2.0.0"}}},
        {yaws,  "1.96",  {git, "https://github.com/klacke/yaws.git", "4a4f89916efc77653f0bb5963ca48c21ab7b8ace"}}
]}.
